    "nuqs": "^2.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "trigger.dev": "^0.0.0-re2-20250508083410",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"

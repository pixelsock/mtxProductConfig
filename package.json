    "eslint-plugin-react-refresh": "^0.4.3",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^3.2.4"
